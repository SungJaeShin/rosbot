<?xml version="1.0" encoding="UTF-8"?>
<launch>



    <!-- BEGIN ROSBOT1-->
    <group ns="rosbot1">
    <arg name="robot_name" value="rosbot1" />
    <param name="robot_description" command="$(find xacro)/xacro.py $(find rosbot_description)/urdf/rosbot.xacro robot_namespace:=$(arg robot_name) "/>
      <param name="tf_prefix" value="$(arg robot_name)" />
      <include file="$(find rosbot_gazebo)/launch/single_rosbot.launch" >
        <arg name="init_pose" value="-x 0.0 -y 0.0 -z 0 -Y 0" />
        <arg name="robot_name" value="$(arg robot_name)" />
      </include>
    </group>


    <!-- BEGIN ROSBOT2-->
    <group ns="rosbot2">
    <arg name="robot_name" value="rosbot2" />
    <param name="robot_description" command="$(find xacro)/xacro.py $(find rosbot_description)/urdf/rosbot.xacro robot_namespace:=$(arg robot_name) "/>
      <param name="tf_prefix" value="$(arg robot_name)" />
      <include file="$(find rosbot_gazebo)/launch/single_rosbot.launch" >
        <arg name="init_pose" value="-x 2.0 -y -4.0 -z 0 -Y 0" />
        <arg name="robot_name" value="$(arg robot_name)" />
      </include>
    </group>


    <!-- BEGIN ROSBOT1-->
    <group ns="rosbot3">
    <arg name="robot_name" value="rosbot3" />
    <param name="robot_description" command="$(find xacro)/xacro.py $(find rosbot_description)/urdf/rosbot.xacro robot_namespace:=$(arg robot_name) "/>
      <param name="tf_prefix" value="$(arg robot_name)" />
      <include file="$(find rosbot_gazebo)/launch/single_rosbot.launch" >
        <arg name="init_pose" value="-x 1.0 -y 3.0 -z 0 -Y 0" />
        <arg name="robot_name" value="$(arg robot_name)" />
      </include>
    </group>


  <!-- Gmapping SLAM -->
  <include file="$(find rosbot_gazebo)/launch/gmapping1.launch"></include>
  <include file="$(find rosbot_gazebo)/launch/gmapping2.launch"></include>
  <include file="$(find rosbot_gazebo)/launch/gmapping3.launch"></include>

</launch>
